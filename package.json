{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "concurrently 'mocha tests' 'npm run eslint'",
    "load:test": "concurrently 'npm start' 'artillery run artillery.yml'",
    "eslint": "eslint .",
    "start": "node index.js",
    "dev": "nodemon",
    "coverage": "nyc --reporter=lcov --reporter=text mocha tests"
  },
  "husky": {
    "hooks": {
      "pre-push": "git diff HEAD --quiet && npm test"
    }
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^5.0.0",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "artillery": "^1.6.1",
    "chai": "^4.2.0",
    "cluster": "^0.7.7",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2"
  }
}
